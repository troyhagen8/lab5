@model lab4.Models.Person

<h2>Person</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name:</label>
                <input asp-for="FirstName" oninvalid="setCustomValidity('Must be 2-10 characters long!')"
                       onchange="try { setCustomValidity('') } catch (e) {}"  pattern=".{2,10}" required class="form-control"  />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name:</label>
                <input asp-for="LastName" required class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Birthdate:</label>
                <input type="DateTime" placeholder="mm/dd/yyyy" pattern="(0[1-9]|1[012]).(0[1-9]|1[0-9]|2[0-9]|3[01]).[0-9]{4}" oninvalid="setCustomValidity('MM/dd/yyyy format is Required!')"
                       onchange="try { setCustomValidity('') } catch (e) {}" required asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-controller="Person" asp-action="Person">Back to List</a>
</div>
